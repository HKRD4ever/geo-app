pipeline {
    agent any
    tools {
        maven 'M2_HOME'
    }

    stages {
        stage('sonar-scan') {
            steps {
                withSonarQubeEnv('sonarQube_server1') {
                    sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=HKRD4ever_geo-app'
                }
                
            }
        }
        stage('Maven Build') {
            steps {
                sh 'mvn clean'
                sh 'mvn validate'
                sh 'mvn compile'
                sh 'mvn install'
                sh 'mvn test'
                sh 'mvn package'
            }
        }
        stage('Create File with Date in Filename') {
            steps {
                script {
                    // Create the file with the current date in the filename
                    sh 'touch "file_$(date +\'%Y-%m-%d\').txt"'

                    // Optionally, archive the file so it can be accessed from Jenkins UI
                    archiveArtifacts artifacts: 'file_*.txt'
                }
            }
        }
        stage('Upload Artifact') {
            steps {
                sh 'curl -uadmin:AP8gcgmmset5jeYChTJYDN6XmDd -T http://ec2-3-83-253-9.compute-1.amazonaws.com:8081/artifactory/geolocation/geo/bio_${BUILD_ID}.jar"'                 
            }
        }
    }
}
